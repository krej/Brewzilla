<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="beer.unaccpetable.brewzilla.Screens.RecipeEditor"
    tools:showIn="@layout/activity_create_recipe"
    android:id="@+id/nestedscrollview"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recipe">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recipeStats"
            app:cardElevation="4dp"
            app:contentPadding="10dp"
            android:layout_margin="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtIBUs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="IBUs:"/>

                    <TextView
                        android:id="@+id/txtOG"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TextView"/>

                    <TextView
                        android:id="@+id/txtFG"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TextView"/>

                    <TextView
                        android:id="@+id/txtABV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TextView"/>

                    <TextView
                        android:id="@+id/txtSRM"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TextView"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/srmColor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        app:fabSize="mini"/>
                </LinearLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <TextView
            android:text="Fermentables"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtGrains"
            android:textSize="24sp"
            android:textStyle="normal|bold"
            android:textAlignment="center" />

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/listGrains" />

        <TextView
            android:text="Hops"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtHops"
            android:textStyle="normal|bold"
            android:textSize="24sp"
            android:textAlignment="center" />

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/listHops" />

        <TextView
            android:text="Yeasts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtYeasts"
            android:textStyle="normal|bold"
            android:textAlignment="center"
            android:textSize="24sp" />

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/listYeast" />
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
